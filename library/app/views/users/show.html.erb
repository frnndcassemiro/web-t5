<p id="notice"><%= notice %></p>

<div class="back">
  <button type="button" class="btn btn-light btn-link">
    <%= link_to 'Back', users_path %>
  </button>
</div>
  
<br><br><br>
  
<p class="p-show p-margin" ><strong>User name:&nbsp;</strong><%= @user.name %></p>
<p class="p-show p-margin" ><strong>User e-mail:&nbsp;</strong><%= @user.email %></p>
<p class="p-show p-margin" ><strong>User address:&nbsp;</strong>
  <% address = Zipcode.find_by_id(@user.zipcode_id).info %> <%= address %> - 
  <% city = Zipcode.find_by_id(@user.zipcode_id).city %> <%= city %> - 
  <% state = Zipcode.find_by_id(@user.zipcode_id).state %> <%= state %>  
</p>