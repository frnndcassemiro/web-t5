<p id="notice"><%= notice %></p>

<div class="back">
  <button type="button" class="btn btn-light btn-link">
    <%= link_to 'Back', root_path %>
  </button>
</div>

<table class="table">
  <thead>
    <tr>
    <th scope="col">Book</th>
    <th scope="col">User</th>
    <th scope="col">Date</th>
    <%# <th scope="col"></th> %>
    <th scope="col"></th>
    <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @loans.each do |loan| %>
      <tr> 
        <td><% user = User.find_by_id(loan.user_id).name %> <%= user %></td> 
        <td><% book = Book.find_by_id(loan.book_id).title %> <%= book %></td> 
        <td><%= loan.date %></td>
        <td><button type="button" class="btn btn-light btn-link"><%= link_to 'Show', loan %></button></td>
        <%# <td><button type="button" class="btn btn-light btn-link"><%= link_to 'Edit', edit_loan_path(loan) </button></td> %>
        <td><button type="button" class="btn btn-light btn-link"><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>